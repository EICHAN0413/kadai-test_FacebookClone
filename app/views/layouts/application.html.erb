<!DOCTYPE html>
<html>
  <head>
    <title>FacebookCloneApplication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      
      <li class="logo">
         <%= link_to pictures_path do %><%= image_tag("f_logo_RGB-Blue_58.png", width: '25px', height: '20px') %>
      </li>
      <% end %>
        
        <% if logged_in? %>
        <li class="active"><%= link_to '投稿する', new_picture_path %> <span class="sr-only">(current)</span></li>
         <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">メニュー<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "マイページ", user_path(current_user.id) %></li>
            <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
          </ul>
        </li>
        <form class="navbar-form navbar-left">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">検索</button>
      </form>
       <% else %>
        <li><%= link_to "新規登録", new_user_path %></li>
        <li><%= link_to "ログイン", new_session_path %></li>
       <% end %>
      </ul>

      

      
    </div>
  </div>
</nav>
</header>

  <%= yield %>
  </body>
</html>


